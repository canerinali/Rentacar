@using Dekorasyon.WebApp.Models
@using Blog.Entities
@{
    List<Category> list = CacheHelper.GetCategoriesFromCache();
}

    <section id="work" class="portfolio-mf sect-pt4 route">
        <div class="container">
            <div class="row">
                <div class="col-sm-12">
                    <div class="title-box text-center">
                        <h3 class="title-a">
                            Kategoriler
                        </h3>
                        <div class="line-mf"></div>
                    </div>
                </div>
            </div>
            <div class="row">
                @foreach (Category cat in list)
                {
                    <div class="col-md-4">
                        <div class="work-box">
                            <a href="/AnaHome/ByCategory/@cat.Id">
                                <div class="work-img">
                                    <img src="~/images/@cat.CategoryImageFilename" alt="" class="img-fluid">
                                </div>
                                <div class="work-content">
                                    <div class="row">
                                        <div class="col-sm-8">
                                            <h2 class="w-title">@cat.Title</h2>
                                        </div>
                                        <div class="col-sm-4">
                                            <div class="w-like">
                                                <span class="ion-ios-plus-outline"></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
