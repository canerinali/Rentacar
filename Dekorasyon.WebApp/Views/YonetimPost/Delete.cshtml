@model Blog.Entities.Post
@{
    ViewBag.Title = "Notu Kaldır";
}
<div class="row">
    <div class="container">
        <div class="col-12">
            <div class="col-md-8 col-md-offset-2">
                <h2>@ViewBag.Title</h2>
                <h3>Silmek istediğinize emin misiniz?</h3>
            </div>
            <hr />
            <dl class="col-10 text-lg">
                <dt>
                    @Html.DisplayNameFor(model => model.Category.Title)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Category.Title)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Title)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Title)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Text)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Text)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.IsDraft)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.IsDraft)
                </dd>
            </dl>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="row">
                    <div class="col-12 text-center">
                        <div class="form-actions no-color">
                            <div class="col-md-offset-2 col-md-10">
                                <button type="submit" class="btn btn-danger">
                                    <span class="fa fa-save"></span> Sil
                                </button>
                                <a href="/YonetimPost/Index" class="btn btn-default">
                                    <span class="fa fa-arrow-circle-left"></span>Back to List
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
