@model IEnumerable<Blog.Entities.Post>
@{
    ViewBag.Title = "Notlarım";
}
<div class="container">
    <div class="row">
        <div class="col-md-12 col-md-offset-1">
            <h2 class="text-center">@ViewBag.Title</h2>
            <hr />
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 col-md-offset-1">
            <p>
                <a href="/YonetimPost/Create" class="btn btn-primary">
                    <span class="fa fa-edit"> Yeni</span>
                </a>
            </p>
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Category.Title)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Title)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Text)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.IsDraft)
                    </th>
                    <th></th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Category.Title)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Title)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Text)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IsDraft)
                        </td>
                        <td width="250">
                            <a href="/YonetimPost/Edit/@item.Id" class="btn btn-lg" title="Düzenle">
                                <span class="fa fa-edit"></span>
                            </a>
                            <a href="/YonetimPost/Details/@item.Id" class="btn btn-lg" title="Detaylar">
                                <span class="fa fa-search"></span>
                            </a>
                            <a href="/YonetimPost/Delete/@item.Id" class="btn btn-lg" title="Kaldır">
                                <span class="fa fa-trash"></span>
                            </a>
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
</div>

